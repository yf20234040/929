.file-icon.data-v-329f70e7 {
  width: 64rpx;
  height: 64rpx;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
  flex-shrink: 0; /* 防止图标被压缩 */
}
.iconfont.data-v-329f70e7 {
  font-size: 38rpx;
  color: #1e88e5;
}

/* 文件信息 - 优先分配空间 */
.file-info.data-v-329f70e7 {
  flex: 1; /* 占据剩余空间 */
  overflow: hidden;
  margin-right: 20rpx; /* 与按钮保持距离 */
}
.file-name.data-v-329f70e7 {
  font-size: 30rpx; /* 适当缩小字体，避免过长 */
  color: #1e293b;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.4; /* 优化行高 */
}

/* 查看按钮容器 - 固定宽度，不挤压文字 */
.view-btn-container.data-v-329f70e7 {
  width: 120rpx; /* 固定宽度，确保按钮不压缩文字 */
  flex-shrink: 0; /* 禁止收缩 */
}

/* 查看按钮样式 */
.view-btn.data-v-329f70e7 {
  background-color: #e0f2fe;
  color: #0284c7;
  padding: 12rpx 0; /* 水平内边距改为0，由容器控制宽度 */
