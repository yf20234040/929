.media-gallery.data-v-399d19e6 {
  background-color: #f5f5f5;
  min-height: 100vh;
}
/* 缩略图网格布局 */
.thumbnail-grid.data-v-399d19e6 {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 2rpx;
  padding: 2rpx;
}
.media-item.data-v-399d19e6 {
  position: relative;
  width: 100%;
  padding-top: 100%; /* 1:1 比例 */
  overflow: hidden;
}
.media-thumbnail.data-v-399d19e6 {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  transition: -webkit-transform 0.3s ease;
  transition: transform 0.3s ease;
  transition: transform 0.3s ease, -webkit-transform 0.3s ease;
}
.media-item:active .media-thumbnail.data-v-399d19e6 {
  -webkit-transform: scale(0.95);
          transform: scale(0.95);
}
/* 视频缩略图容器 */
.video-thumbnail-container.data-v-399d19e6 {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
