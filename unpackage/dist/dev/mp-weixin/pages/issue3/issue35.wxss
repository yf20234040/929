.image-0.data-v-d0125fc2 { border: 2rpx solid #ef4444;
}
.image-1.data-v-d0125fc2 { border: 2rpx solid #06b6d4;
}
.image-2.data-v-d0125fc2 { border: 2rpx solid #3b82f6;
}
.image-3.data-v-d0125fc2 { border: 2rpx solid #10b981;
}
.image-4.data-v-d0125fc2 { border: 2rpx solid #f59e0b;
}
.media-thumbnail.data-v-d0125fc2 {
  width: 100%;
  height: 200rpx;
  display: block;
  transition: -webkit-transform 0.3s ease;
  transition: transform 0.3s ease;
  transition: transform 0.3s ease, -webkit-transform 0.3s ease;
}
.image-overlay.data-v-d0125fc2 {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}
.image-card:hover .image-overlay.data-v-d0125fc2 {
  opacity: 1;
}
.overlay-text.data-v-d0125fc2 {
  color: #ffffff;
  font-size: 22rpx;
  margin-bottom: 8rpx;
  font-weight: 500;
}
.overlay-icon.data-v-d0125fc2 {
  font-size: 28rpx;
  color: #ffffff;
}
.bottom-decoration.data-v-d0125fc2 {
  margin-top: 60rpx;
  display: flex;
  justify-content: center;
  padding-bottom: 30rpx;
}
.decoration-dots.data-v-d0125fc2 {
  display: flex;
  gap: 16rpx;
}
.dot.data-v-d0125fc2 {
  width: 10rpx;
  height: 10rpx;
  background: #94a3b8;
  border-radius: 50%;
  -webkit-animation: pulse-data-v-d0125fc2 2s infinite;
          animation: pulse-data-v-d0125fc2 2s infinite;
}
.dot.data-v-d0125fc2:nth-child(2) {
  -webkit-animation-delay: 0.3s;
          animation-delay: 0.3s;
}
.dot.data-v-d0125fc2:nth-child(3) {
  -webkit-animation-delay: 0.6s;
          animation-delay: 0.6s;
}
@-webkit-keyframes pulse-data-v-d0125fc2 {
0%, 100% {
    opacity: 0.6;
    -webkit-transform: scale(1);
            transform: scale(1);
}
50% {
    opacity: 1;
    -webkit-transform: scale(1.1);
            transform: scale(1.1);
}
}
@keyframes pulse-data-v-d0125fc2 {
0%, 100% {
    opacity: 0.6;
    -webkit-transform: scale(1);
            transform: scale(1);
}
50% {
    opacity: 1;
    -webkit-transform: scale(1.1);
            transform: scale(1.1);
