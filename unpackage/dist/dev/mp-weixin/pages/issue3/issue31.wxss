
.container.data-v-d0831bca {
  background-color: #f5f7fa;
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 标题样式 */
.header.data-v-d0831bca {
  text-align: center;
  padding: 30rpx 0;
  margin-bottom: 20rpx;
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.title.data-v-d0831bca {
  font-size: 34rpx;
  font-weight: bold;
  color: #1677ff;
  display: block;
  margin-bottom: 15rpx;
}
.subtitle.data-v-d0831bca {
  font-size: 26rpx;
  color: #666;
  display: block;
}

/* 通用区块样式 */
.section.data-v-d0831bca {
  background-color: white;
  border-radius: 16rpx;
  margin-bottom: 25rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 0 25rpx 25rpx;
}
.section-title.data-v-d0831bca {
  padding: 18rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}
.section-title text.data-v-d0831bca {
  font-size: 30rpx;
  font-weight: bold;
  color: #1677ff;
}

/* 内容卡片样式 */
.content-card.data-v-d0831bca {
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
  line-height: 1.6;
}
.content-text.data-v-d0831bca {
  font-size: 24rpx;
  color: #333;
  display: block;
  margin-bottom: 15rpx;
}
.content-text.data-v-d0831bca:last-child {
  margin-bottom: 0;
}

/* 标签页样式 */
.result-tabs.data-v-d0831bca {
  display: flex;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
  background-color: #f5f7fa;
}
.tab.data-v-d0831bca {
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
  font-size: 26rpx;
  color: #666;
  background-color: #f5f7fa;
}
.tab.active.data-v-d0831bca {
  background-color: #1677ff;
  color: white;
  font-weight: bold;
}

/* 文件列表样式 */
.file-list.data-v-d0831bca {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}
.file-card.data-v-d0831bca {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  border-left: 5rpx solid #1677ff;
  transition: background-color 0.2s ease;
}
.file-card.data-v-d0831bca:active {
  background-color: #f0f0f0;
}
.file-icon-container.data-v-d0831bca {
  width: 70rpx;
  height: 70rpx;
  background-color: #e8f3ff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}
.file-icon.data-v-d0831bca {
  font-size: 36rpx;
  color: #1677ff;
}
.file-info.data-v-d0831bca {
  flex: 1;
  min-width: 0;
}
.file-name.data-v-d0831bca {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.file-meta.data-v-d0831bca {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 22rpx;
}
.file-type.data-v-d0831bca {
  color: #1677ff;
  background-color: #e8f3ff;
  padding: 3rpx 12rpx;
  border-radius: 12rpx;
}
.file-divider.data-v-d0831bca {
  color: #ccc;
  font-size: 18rpx;
}
.file-size.data-v-d0831bca {
  color: #666;
}
.view-btn.data-v-d0831bca {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #e8f3ff;
}

/* 配对信息样式 */
.pairing-info.data-v-d0831bca {
  margin-top: 20rpx;
  background-color: #e8f3ff;
  border-radius: 10rpx;
  padding: 15rpx;
}
.pairing-item.data-v-d0831bca {
  display: flex;
  margin-bottom: 12rpx;
}
.pairing-item.data-v-d0831bca:last-child {
  margin-bottom: 0;
}
.pairing-label.data-v-d0831bca {
  font-size: 24rpx;
  font-weight: bold;
  color: #1677ff;
  min-width: 140rpx;
}
.pairing-value.data-v-d0831bca {
  font-size: 24rpx;
  color: #333;
  flex: 1;
}

/* 底部样式 */
.footer.data-v-d0831bca {
  text-align: center;
  padding: 25rpx 0;
  color: #666;
}
.organizer.data-v-d0831bca {
  font-size: 24rpx;
  display: block;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
.file-card.data-v-d0831bca {
    padding: 15rpx;
}
.file-icon-container.data-v-d0831bca {
    width: 60rpx;
    height: 60rpx;
}
}

