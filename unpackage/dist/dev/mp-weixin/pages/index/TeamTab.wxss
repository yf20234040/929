.container.data-v-03b96e72 {
  min-height: 100vh;
  background-color: #fff5f7; /* 浅粉色背景 - 多巴胺风格 */
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}
/* 返回图标 */
.back-btn.data-v-03b96e72 {
  width: 40rpx;
  height: 40rpx;
  border: 2px solid #ffffff;
  border-width: 0 0 2px 2px;
  -webkit-transform: rotate(45deg) translateX(2px);
          transform: rotate(45deg) translateX(2px);
  transition: all 0.2s ease;
  -webkit-transform: rotate(45deg) translateX(2px) scale(0.9);
          transform: rotate(45deg) translateX(2px) scale(0.9);
}
/* 点击效果 */
.back-btn.data-v-03b96e72:active {
  background-color: rgba(255, 255, 255, 0.3);
  -webkit-transform: scale(0.95);
          transform: scale(0.95);
  -webkit-transform: rotate(45deg) translateX(2px) scale(0.9);
          transform: rotate(45deg) translateX(2px) scale(0.9);
}
.title.data-v-03b96e72 {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff; /* 白色文字 */
}
/* 内容区域样式 */
.content.data-v-03b96e72 {
  padding: 30rpx;
  box-sizing: border-box;
  height: calc(100vh - 100rpx);
}
/* 头部样式 */
.header.data-v-03b96e72 {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 200rpx 60rpx 100rpx 60rpx;
  padding-bottom: 100rpx;
  border-radius: 24rpx;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
}
.main-title.data-v-03b96e72 {
  font-size: 60rpx;
  font-weight: bold;
  color: #ffaa7f; /* 主色调文字 */
  line-height: 1.5;
}
.intro.data-v-03b96e72 {
  margin-top: 80rpx;
  font-size: 30rpx;
  color: #555555;
  line-height: 1.6;
}
/* 章节样式 - 多彩卡片效果 */
.section.data-v-03b96e72 {
  margin-bottom: 40rpx;
  padding: 30rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
  border-top: 6rpx solid;
  transition: -webkit-transform 0.3s ease;
  transition: transform 0.3s ease;
  transition: transform 0.3s ease, -webkit-transform 0.3s ease;
}
/* 不同章节使用不同的多巴胺色调 */
.section.data-v-03b96e72:nth-child(1) { border-top-color: #ff6b8b;
}
/* 粉色 */
.section.data-v-03b96e72:nth-child(2) { border-top-color: #4ecdc4;
}
/* 青绿色 */
.section.data-v-03b96e72:nth-child(3) { border-top-color: #ffd166;
}
/* 黄色 */
.section.data-v-03b96e72:nth-child(4) { border-top-color: #06d6a0;
}
/* 薄荷绿 */
.section.data-v-03b96e72:nth-child(5) { border-top-color: #118ab2;
}
/* 蓝色 */
.section.data-v-03b96e72:active {
  -webkit-transform: translateY(2px);
          transform: translateY(2px);
}
.section-title.data-v-03b96e72 {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  display: block;
  padding-bottom: 12rpx;
  border-bottom: 2px solid #f0f0f0;
}
/* 子章节样式 */
.subsection.data-v-03b96e72 {
  margin-bottom: 30rpx;
}
.subsection.data-v-03b96e72:last-child {
  margin-bottom: 0;
}
.subsection-title.data-v-03b96e72 {
  font-size: 30rpx;
  font-weight: bold;
  margin: 24rpx 0 20rpx;
  display: block;
  color: #118ab2; /* 蓝色标题 */
}
/* 段落样式 */
.paragraph.data-v-03b96e72 {
