.container.data-v-480b45b0 {
  min-height: 100vh;
  background-color: #f8f9fa; /* 浅灰底色 */
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}
/* 顶部图片区域 */
.header-image-container.data-v-480b45b0 {
  width: 100%;
  position: relative;
  overflow: hidden;
  border-radius: 0 0 30rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05); /* 浅色阴影 */
}
.header-image.data-v-480b45b0 {
  width: 100%;
  height: auto;
  display: block;
  max-height: 400rpx;
  object-fit: cover;
  /* 顶部图片浅色处理：适当提高亮度和对比度 */
  -webkit-filter: brightness(1.1) contrast(1.05) saturate(0.95);
          filter: brightness(1.1) contrast(1.05) saturate(0.95);
  transition: -webkit-filter 0.3s ease;
  transition: filter 0.3s ease;
  transition: filter 0.3s ease, -webkit-filter 0.3s ease;
}
/* 图片覆盖层 - 优化文字与图片的对比度 */
.image-overlay.data-v-480b45b0 {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  /* 渐变加深，确保文字清晰可读 */
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.4));
  color: #ffffff;
}
.overlay-title.data-v-480b45b0 {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}
.overlay-subtitle.data-v-480b45b0 {
  font-size: 24rpx;
  opacity: 0.95;
  display: block;
  color: #ffffff;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}
/* 内容滚动区域 */
.content.data-v-480b45b0 {
  padding: 30rpx;
  box-sizing: border-box;
  height: calc(100vh - 420rpx);
  background-color: #f8f9fa;
}
/* 章节样式 */
.section.data-v-480b45b0 {
  margin-bottom: 40rpx;
  padding: 30rpx;
  background-color: #ffffff; /* 白色背景 */
  border-radius: 24rpx;
  box-shadow: 0 4px 20rpx rgba(0, 0, 0, 0.03); /* 浅灰色阴影 */
  border-top: 6rpx solid #4a90e2; /* 蓝色顶部边框 */
  transition: -webkit-transform 0.3s ease;
  transition: transform 0.3s ease;
  transition: transform 0.3s ease, -webkit-transform 0.3s ease;
}
.section-title.data-v-480b45b0 {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  display: block;
  padding-bottom: 12rpx;
  border-bottom: 2px solid #e6f0fb; /* 浅蓝色底边框 */
  color: #2d3748; /* 深灰色标题 */
}
.section-subtitle.data-v-480b45b0 {
  font-size: 30rpx;
  font-weight: bold;
  margin: 24rpx 0 20rpx;
  display: block;
  color: #4a5568; /* 中灰色副标题 */
}
/* 段落样式 */
.paragraph.data-v-480b45b0 {
  font-size: 28rpx;
  color: #333; /* 深灰色正文 */
  line-height: 1.8;
  margin-bottom: 20rpx;
  padding: 0 8rpx;
}
.highlight.data-v-480b45b0 {
  color: #e53e3e; /* 红色强调 */
  font-weight: bold;
}
/* 表格样式 */
.table-container.data-v-480b45b0 {
  width: 100%;
  overflow-x: auto;
  margin: 24rpx 0;
  padding: 12rpx;
  border-radius: 12rpx;
  background-color: #f9fafb; /* 极浅灰表格容器 */
}
.progress-table.data-v-480b45b0, .compare-table.data-v-480b45b0 {
  width: 100%;
  min-width: 600rpx;
}
.table-header.data-v-480b45b0 {
  display: flex;
  background-color: #e9f0fb; /* 浅蓝色表头 */
  font-weight: bold;
}
.table-row.data-v-480b45b0 {
  display: flex;
  border-bottom: 1px solid #e2e8f0; /* 浅灰色分隔线 */
  background-color: #ffffff;
}
.table-cell.data-v-480b45b0 {
  flex: 1;
  padding: 20rpx 15rpx;
  text-align: left;
  border-right: 1px solid #e2e8f0; /* 浅灰色边框 */
  font-size: 26rpx;
  color: #333; /* 深灰色表格文字 */
  word-break: break-all;
  line-height: 1.6;
}
.table-cell.data-v-480b45b0:last-child {
  border-right: none;
}
.table-label.data-v-480b45b0 {
  font-weight: bold;
  color: #2d3748;
  background-color: #e9f0fb;
}
/* 图片样式 - 浅色适配核心处理 */
.img-placeholder.data-v-480b45b0 {
  width: 100%;
  margin: 30rpx 0;
  text-align: center;
}
/* 图片滤镜容器 */
.image-filter-wrapper.data-v-480b45b0 {
  display: inline-block;
  width: 100%;
  border-radius: 18rpx;
  overflow: hidden;
  /* 添加浅色背景衬托图片 */
  background-color: #f1f1f1;
}
/* 内容区图片浅色处理 */
.light-image.data-v-480b45b0 {
  width: 100%;
  height: auto;
  display: block;
  /* 核心滤镜：提高亮度，降低对比度，轻微去饱和，使图片更柔和 */
  -webkit-filter: brightness(1.08) contrast(0.95) saturate(0.9);
          filter: brightness(1.08) contrast(0.95) saturate(0.9);
  transition: all 0.3s ease;
}
/* 鼠标悬停/触摸反馈 */
.light-image.data-v-480b45b0:active {
  -webkit-transform: scale(0.98);
          transform: scale(0.98);
  -webkit-filter: brightness(1.1) contrast(1) saturate(0.95);
          filter: brightness(1.1) contrast(1) saturate(0.95);
}
.img-desc.data-v-480b45b0 {
  font-size: 26rpx;
  color: #666; /* 灰色图片描述 */
  margin-top: 15rpx;
  display: block;
  font-style: italic;
}
/* 响应式调整 */
@media (max-width: 375px) {
.content.data-v-480b45b0 {
    padding: 20rpx;
    height: calc(100vh - 380rpx);
}
.section.data-v-480b45b0 {
    padding: 24rpx;
    margin-bottom: 30rpx;
}
.header-image.data-v-480b45b0 {
    max-height: 300rpx;
}
.overlay-title.data-v-480b45b0 {
    font-size: 32rpx;
}
.overlay-subtitle.data-v-480b45b0 {
    font-size: 22rpx;
}
}

